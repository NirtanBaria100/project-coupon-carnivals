// tsconfig.json (in your project root)
{
  "compilerOptions": {
    "target": "es2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // Or "node"
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // ===== Crucial for aliases =====
    "baseUrl": ".", // THIS IS THE PROJECT ROOT
    "paths": {
      // You can keep a general '@' alias if you like
      "@/*": ["./resources/js/*"],
      // This is the specific alias for your components folder
      "@components/*": ["./resources/js/components/*"],
      // Add other relevant aliases based on your 'js' folder structure
      "@layouts/*": ["./resources/js/layouts/*"],
      "@pages/*": ["./resources/js/pages/*"]
      // ... and so on for hooks, lib, types
    }
  },
  // Ensure 'include' covers all your React/TSX files
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.d.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.jsx",
    "resources/**/*.js"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
